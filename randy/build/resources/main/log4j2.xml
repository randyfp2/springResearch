<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Appender for app.log -->
        <File name="AppLog" fileName="logs/app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Appender for appTransactional.log -->
        <File name="AppTransactionalLog" fileName="logs/appTransactional.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger for general logging -->
        <Logger name="com.research.randy.general" level="info" additivity="false">
            <AppenderRef ref="AppLog"/>
        </Logger>

        <!-- Logger for transactional logging (request/response) -->
        <Logger name="com.research.randy.transactional" level="info" additivity="false">
            <AppenderRef ref="AppTransactionalLog"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="AppLog"/>
        </Root>
    </Loggers>
</Configuration>
